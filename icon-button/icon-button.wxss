/* dist/cards/icon-button/icon-button.wxss */
.wx-cards-icon-button {
  display: inline-block;
  align-self: flex-start;
  flex: 0 0 auto;
  color: rgba(0, 0, 0, 0.54);
  padding: 24rpx;
  overflow: visible;
  font-size: 1.5rem;
  text-align: center;
  transition: background-color 150ms cubic-bezier(0.4, 0, 0.2, 1) 0ms;
  border-radius: 50%;
}

.wx-cards-icon-button .image {
  width: 40rpx;
}
